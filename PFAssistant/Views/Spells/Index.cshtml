@model PFAssistant.Models.SearchCriteria

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Spell Search</h2>
@using (Html.BeginForm("SpellList", "Spells", FormMethod.Get))
{
    <div class="form-group">
        @Html.Label("Name")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
            @Html.Label("School")
            @Html.TextBoxFor(x => x.School, new { @class = "form-control" })
    </div>
    <div class="form-group">
            @Html.Label("Class")
            @Html.TextBoxFor(x => x.Class, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-search"></span>
    </button>
}

